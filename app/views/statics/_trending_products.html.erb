<section class="slice border-top">
<div class="container">
    <div class="section-title section-title--style-1 text-center">
        <h3 class="section-title-inner heading-6 strong-600 text-uppercase ls-2">
            <span>Trending products</span>
        </h3>
        <span class="section-title-delimiter clearfix d-none"></span>
    </div>

    <div class="row-wrapper">
        <div class="row cols-xs-space cols-sm-space cols-md-space">
            <% x = Faker::Number.between(Item.first.id, Item.first.id + 10) %>
            <% x.upto(x + 7) do |n| %>
            <div class="col-lg-3 col-md-6">
                <div class="block product bg-transparent no-radius">
                    <div class="product-image">
                        <div class="view view-first">
                                <%= link_to (image_tag Item.find(n).image_url), item_path(n) %>
                        </div>

                        <div class="product-actions--a product-actions--2" data-animation-in="slideInRight"  data-animation-out="slideOutRight">
                            <button type="button" class="btn-product-action">
                                <i class="ion-bag"></i>
                            </button>

                            <button type="button" class="btn-product-action">
                                <i class="ion-ios-heart-outline"></i>
                            </button>
                        </div>
                    </div>

                    <div class="block-body px-0">
                        <h3 class="heading heading-6 strong-500 text-capitalize mb-0"><%= Item.find(n).title %></h3>
                        <span class="star-rating star-rating-sm">
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star-o"></i>
                            <i class="fa fa-star-o"></i>
                        </span>
                        <div class="price-wrapper">
                            <span class="price heading-6 c-gray-light strong-400">$<span class="price-value"><%= Item.find(n).price %></span></span>
                        </div>
                    </div>
                </div>
            </div>
            <% end %>
        </div>
    </div>
</div>
</section>